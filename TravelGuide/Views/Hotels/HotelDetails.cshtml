@model TravelGuide.Entiteis.Models.Hotel

@{
    ViewData["Title"] = "HotelDetails";
    Layout = "_templateLayout";
}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Hotel Details</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <div class="form-contact contact_form">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="HotelName">Hotel Name</label>
                        <p class="form-control">@Model.HotelName</p>
                    </div>
                </div>
                
                
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="PhoneNumber">Phone Number</label>
                        <p class="form-control">@Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="Rating">Rating</label>
                        <p class="form-control">@Model.Rating</p>
                    </div>
                </div>
            </div>
            <div class="m-auto">
                <div class="form-group mb-3 text-right">
                    <a href="@Url.Action("Index")" class="btn text-white" style="padding: 10px 15px; background-color: #fe5c24; text-transform: capitalize; margin-top: 5px;">Cancel</a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
