@model IEnumerable<TravelGuide.Entiteis.Models.PackageBooking>

@{
    ViewData["Title"] = "listPackageBooking";
}

<h1>listPackageBooking</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TravelPackage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
