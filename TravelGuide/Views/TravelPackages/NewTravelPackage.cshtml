@model TravelGuide.Entiteis.Models.TravelPackage

@{
    ViewData["Title"] = "NewTravelPackage";
    Layout = "_templateLayout";
}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Create Travel Package</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <form class="form-contact contact_form" asp-action="Create" method="post" enctype="multipart/form-data" id="travelPackageForm">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="PackageName" name="PackageName" id="PackageName" type="text" placeholder='Enter the Package Name'>
                        <span asp-validation-for="PackageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Description" name="Description" id="Description" type="text" placeholder='Enter the Description'>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Destination" name="Destination" id="Destination" type="text" placeholder='Enter the Destination'>
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="Price" name="Price" id="Price" type="text" placeholder='Enter the Price'>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <!-- Updated StartDate input -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="StartDate" name="StartDate" id="StartDate" type="date" placeholder='Select Start Date'>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <!-- Updated EndDate input -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="EndDate" name="EndDate" id="EndDate" type="date" placeholder='Select End Date'>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <!-- Updated MaxGuests input -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="MaxGuests" name="MaxGuests" id="MaxGuests" type="number" min="1" max="100" placeholder='Enter Max Guests'>
                        <span asp-validation-for="MaxGuests" class="text-danger"></span>
                    </div>
                </div>
                <!-- Updated Rating input (slider) -->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="Rating">Rating (1 to 5):</label>
                        <input class="form-control-range" asp-for="Rating" name="Rating" id="Rating" type="range" min="1" max="5" step="0.5" value="3">
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" asp-for="TravelImage" name="TravelImage" id="TravelImage" type="file" placeholder='Upload an Image'>
                        <span asp-validation-for="TravelImage" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 text-right">
                <button type="submit" value="create" class="button button-contactForm btn_1">Create</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

