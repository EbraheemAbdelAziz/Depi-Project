@model TravelGuide.Entiteis.Models.WatchlistItem

@{
    ViewData["Title"] = "DeleteWatchlist";
    Layout = "_templateLayout";
}

<div class="row">
    <div class="col-12">
        <h2 class="contact-title text-center m-5 text-italic">Delete Watchlist Item</h2>
    </div>
    <div class="col-lg-8 m-auto">
        <h3 class="text-center">Are you sure you want to delete this item?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemType)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="WatchlistItemId" />
            <div class="form-group mb-3 text-right">
                <button type="submit" value="Delete" class="button button-contactForm btn_1 btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
